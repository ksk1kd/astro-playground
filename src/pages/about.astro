---
import Layout from '../layouts/Layout.astro';

const pageTitle = "About";
const isBodyVisible = true;
const textColor = "navy";
---

<Layout>
	<h1>{pageTitle}</h1>
	{isBodyVisible && 
		<>
			<p>
				This is about page.
			</p>
			<p>
				<a href="">Sample Link</a>
			</p>
		</>
	}
</Layout>

<style define:vars={{ textColor }}>
	p {
		color: var(--textColor);
	}
</style>
